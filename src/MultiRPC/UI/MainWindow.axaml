<ui:FluentWindow xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:MultiRPC.UI"
        mc:Ignorable="d"
        MinHeight="72" 
        MinWidth="151"
        SizeToContent="WidthAndHeight"
        Background="Transparent"
        CanResize="False"
        x:Class="MultiRPC.UI.MainWindow">
    <Grid x:Name="grdContent" Background="{DynamicResource ThemeAccentColor}">
        <Border x:Name="eabTitleBar" VerticalAlignment="Top" Background="Transparent">
            <StackPanel x:Name="stpTitleBarContent" Orientation="Horizontal" Margin="7,0,0,0">
                <Image x:Name="icon" Height="0" Width="0" Margin="0,4,5,4" />
                <TextBlock x:Name="txtTitle" FontSize="11" Text="{Binding TextObservable^}" HorizontalAlignment="Left" VerticalAlignment="Center" />
            </StackPanel>
        </Border>
        <TitleBar x:Name="tbrTitleBar" VerticalAlignment="Top" />
    </Grid>
</ui:FluentWindow>