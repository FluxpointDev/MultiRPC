<local:LocalizablePage
    x:Class="MultiRPC.Shared.UI.Pages.MultiRPCPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MultiRPC.Shared.UI"
    xmlns:views="using:MultiRPC.Shared.UI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="13">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="cclEditor" />
        <StackPanel Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock x:Name="tblWhatWillLookLike" HorizontalAlignment="Left" FontWeight="SemiBold" Margin="0,0,0,3" />
            <views:RPCView CurrentView="RichPresence" RichPresence="{x:Bind RichPresence, Mode=OneWay}"  x:Name="rpcView" />
        </StackPanel>
    </Grid>
</local:LocalizablePage>
