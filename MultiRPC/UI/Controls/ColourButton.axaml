<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MultiRPC.UI.Controls.ColourButton">
    <UserControl.Styles>
        <Style Selector="Border.colourBtn">
            <Setter Property="CornerRadius" Value="9" />
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
        </Style>
    </UserControl.Styles>
    <StackPanel>
        <TextBlock x:Name="tblName" Text="{Binding TextObservable^}" TextAlignment="Center" Margin="0,0,0,3" />
        <Border x:Name="brdColour" Classes="colourBtn" BorderBrush="{DynamicResource ThemeAccentColor4}" BorderThickness="1" />
    </StackPanel>
</UserControl>
